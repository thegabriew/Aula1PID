def reajuste(salario):
    if salario <= 280:
        percentual = 0.20
        novo_salario = salario + percentual
        mudanca = novo_salario - salario
        
        print("Salario: " + salario)
        print("Novo salario: " + novo_salario)
        print("Valor do aumento: " + mudanca)
        print("Percentual: " + percentual)


    elif 700 < salario > 280:
        percentual = 0.15
        novo_salario = salario + percentual
        mudanca = novo_salario - salario
        
        print("Salario: " + salario)
        print("Novo salario: " + novo_salario)
        print("Valor do aumento: " + mudanca)
        print("Percentual: " + percentual)

    elif salario > 1500:
        percentual = 0.10
        novo_salario = salario + percentual
        mudanca = novo_salario - salario
        
        print("Salario: " + salario)
        print("Novo salario: " + novo_salario)
        print("Valor do aumento: " + mudanca)
        print("Percentual: " + percentual)

salario = float (input("Insira sal√°rio: "))
reajuste(salario)
