def reajuste(salario):
    if salario <= 280:
        percentual = 0.20
        novo_salario = salario + percentual
        mudanca = novo_salario - salario
        lista = []
        return lista[percentual,novo_salario,mudanca]

    elif 700 < salario > 280:
        percentual = 0.15
        novo_salario = salario + percentual
        mudanca = novo_salario - salario
        lista = []
        return lista[percentual,novo_salario,mudanca]

    elif salario > 1500:
        percentual = 0.10
        novo_salario = salario + percentual
        mudanca = novo_salario - salario
        lista = []
        return lista[percentual,novo_salario,mudanca]



print("Insira o salário do funcionário")
salario = float(input("Salário: "))
lista = [reajuste(salario)]
print("\n")
print(f"Salário antes do reajuste: {salario} \n O perncentual de aumento será {lista[0]:.2f}")
